<?xml version='1.0' encoding='utf-8'?>
<widget id="afpa.learning.portfolio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Portfolio</name>
    <description>
        My portfolio
    </description>
    <author email="malah@nospam.haha" href="https://malahx.github.io/">
        Malah
    </author>
    <content src="index.html" />
    <access origin="https://api.github.com/users/*" />
    <allow-navigation href="https://api.github.com/users/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.1.2" />
    <engine name="browser" spec="~4.1.0" />
</widget>
